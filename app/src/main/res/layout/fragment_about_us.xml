<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.general.AboutUsFragment">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLineLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/dp16" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLineRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/dp16" />

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/baseline_arrow_back_ios_new_24"
        app:layout_constraintStart_toStartOf="@+id/guideLineLeft"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher_foreground"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/guideLineRight"
        app:layout_constraintStart_toStartOf="@+id/guideLineLeft"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtWeAreUniTrust"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans"
        android:text="@string/we_are_uni_trust"
        android:textColor="@color/semi_black"
        android:textSize="@dimen/sp24"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/guideLineRight"
        app:layout_constraintStart_toStartOf="@+id/guideLineLeft"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/_8dp"
        android:background="#908F90"
        android:backgroundTint="#BFBEBF"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/txtWeAreUniTrust" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="@dimen/_8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/guideLineRight"
        app:layout_constraintStart_toStartOf="@+id/guideLineLeft"
        app:layout_constraintTop_toBottomOf="@+id/txtWeAreUniTrust">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="cursive"
                    android:text="Y"
                    android:textColor="@color/semi_black"
                    android:textSize="60sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/open_sans"
                    android:text="@string/about_us_moto"
                    android:textColor="@color/semi_black"
                    android:textSize="@dimen/sp18"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView3"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:text="@string/about_us_second_moto"
                android:textColor="@color/semi_black"
                android:layout_marginTop="@dimen/_4dp"
                android:textSize="@dimen/_16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp16"
                android:fontFamily="@font/open_sans"
                android:text="@string/our_mission"
                android:textColor="@color/semi_black"
                android:textSize="@dimen/_20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:elevation="@dimen/_4dp"
                android:fontFamily="@font/open_sans"
                android:outlineSpotShadowColor="@color/appThemeBlue"
                android:text="@string/about_us_our_mission"
                android:textColor="@color/semi_black"
                android:textSize="@dimen/_16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp16"
                android:fontFamily="@font/open_sans"
                android:text="@string/why_choose_uni_trust"
                android:textColor="@color/semi_black"
                android:textSize="@dimen/_20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp16"
                android:drawableStart="@drawable/baseline_check_circle_outline_24"
                android:drawablePadding="@dimen/_10dp"
                android:elevation="@dimen/_4dp"
                android:fontFamily="@font/open_sans"
                android:outlineSpotShadowColor="@color/appThemeBlue"
                android:text="Convenience Redefined"
                android:textColor="@color/semi_black"
                android:textSize="@dimen/_16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp16"
                android:drawableStart="@drawable/baseline_check_circle_outline_24"
                android:drawablePadding="@dimen/_10dp"
                android:elevation="@dimen/_4dp"
                android:fontFamily="@font/open_sans"
                android:outlineSpotShadowColor="@color/appThemeBlue"
                android:text="Quality You Can Trust"
                android:textColor="@color/semi_black"
                android:textSize="@dimen/_16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp16"
                android:drawableStart="@drawable/baseline_check_circle_outline_24"
                android:drawablePadding="@dimen/_10dp"
                android:elevation="@dimen/_4dp"
                android:fontFamily="@font/open_sans"
                android:outlineSpotShadowColor="@color/appThemeBlue"
                android:text="Locally Focused"
                android:textColor="@color/semi_black"
                android:textSize="@dimen/_16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp16"
                android:drawableStart="@drawable/baseline_check_circle_outline_24"
                android:drawablePadding="@dimen/_10dp"
                android:elevation="@dimen/_4dp"
                android:fontFamily="@font/open_sans"
                android:outlineSpotShadowColor="@color/appThemeBlue"
                android:text="Reliable and Timely"
                android:textColor="@color/semi_black"
                android:textSize="@dimen/_16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp16"
                android:fontFamily="@font/open_sans"
                android:text="Get Started with Uni-Trust"
                android:textColor="@color/semi_black"
                android:textSize="@dimen/_20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:elevation="@dimen/_4dp"
                android:fontFamily="@font/open_sans"
                android:outlineSpotShadowColor="@color/appThemeBlue"
                android:text="@string/about_us_get_stared_with_uni_trust"
                android:textColor="@color/semi_black"
                android:textSize="@dimen/_16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp16"
                android:drawablePadding="6dp"
                android:drawableTint="#FF5722"
                android:fontFamily="@font/open_sans"
                android:text="@string/uni_trust_at_google_maps"
                android:textAlignment="center"
                android:textColor="@color/semi_black"
                android:textSize="@dimen/sp18"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/share_location_24_px" />



            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutGoogleMaps"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_8dp"
                android:layout_height="@dimen/_200dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/mapView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/map_view_mohammadpur_shayamoli"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:riv_corner_radius="@dimen/_10dp" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_bg_20_dp"
                    android:backgroundTint="@color/offWhiteApp"
                    android:src="@drawable/gmap_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/mapView"
                    android:contentDescription="@string/app_name"
                />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/open_google_map"
                    android:textColor="@color/semi_black"
                    android:textSize="@dimen/_16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/imageView7"
                    app:layout_constraintHorizontal_bias="0.491"
                    app:layout_constraintStart_toStartOf="@+id/imageView7"
                    app:layout_constraintTop_toBottomOf="@+id/imageView7" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp16"
                android:drawablePadding="6dp"
                android:fontFamily="@font/open_sans"
                android:text="Contact Us"
                android:drawableTint="@color/bg_tint_light_blue_sky"
                android:textColor="@color/semi_black"
                android:textSize="@dimen/_20sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/account_circle_24_px" />

            <TextView
                android:id="@+id/contactUsPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:clickable="true"
                android:textIsSelectable="true"
                android:fontFamily="@font/open_sans"
                android:text="@string/demo_phone"
                android:textColor="@color/semi_black"
                android:textSize="@dimen/_16sp"
                android:focusable="true"
                app:drawableTint="@color/green"
                android:drawablePadding="@dimen/_10dp"
                app:drawableEndCompat="@drawable/call_24px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp16"
                android:drawablePadding="6dp"
                android:fontFamily="@font/open_sans"
                android:text="@string/address"
                android:textColor="@color/semi_black"
                android:textSize="@dimen/_20sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/home_pin_24_px"
                app:drawableTint="@color/appThemeBlue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:clickable="true"
                android:fontFamily="@font/open_sans"
                android:text="18/7 A, Block-B\nTownhall Center Ground\nMohammadpur, Dhaka"
                android:textColor="@color/semi_black"
                android:textSize="@dimen/_16sp"
                android:focusable="true" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp16"
                android:fontFamily="@font/open_sans"
                android:text="@string/developed_by_arc"
                android:visibility="invisible"
                android:drawableTint="#4CAF50"
                android:drawablePadding="6dp"
                android:textColor="@color/semi_black"
                android:textSize="@dimen/sp14"
                app:drawableStartCompat="@drawable/baseline_android_24" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>