<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.services.CarServiceFragment">

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/baseline_arrow_back_ios_new_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/app_name" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/dp16"
        android:fontFamily="@font/open_sans"
        android:text="@string/request_a_service"
        android:textColor="@color/semi_black"
        android:textStyle="bold"
        android:textSize="@dimen/sp28"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivBack" />


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp16"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="2dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp20"
                android:layout_marginTop="@dimen/dp10"
                android:text="@string/name"
                android:textColor="@color/semi_black"
                android:fontFamily="@font/open_sans"
                android:textSize="@dimen/sp18">

            </TextView>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/name"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp20"
                android:layout_marginEnd="@dimen/dp20"
                app:cursorErrorColor="@color/red"
                app:cursorColor="@color/semi_black"
                app:hintTextColor="@color/semi_black"
                app:boxStrokeColor="@color/semi_black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:text="Mohammad"
                    android:drawablePadding="@dimen/dp10"
                    android:hint="@string/please_enter_your_name"
                    android:inputType="textMultiLine"
                    android:maxLength="50" />


            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp20"
                android:layout_marginTop="@dimen/dp10"
                android:text="@string/phone_number"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/semi_black"
                android:textSize="@dimen/sp18">

            </TextView>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/phone"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp20"
                android:layout_marginEnd="@dimen/dp20"
                app:cursorErrorColor="@color/red"
                app:cursorColor="@color/semi_black"
                app:hintTextColor="@color/semi_black"
                app:boxStrokeColor="@color/semi_black"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dp10"
                    android:hint="@string/demo_phone"
                    android:fontFamily="@font/open_sans"
                    android:inputType="number"
                    android:maxLength="11" />


            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp20"
                android:layout_marginTop="@dimen/dp10"
                android:text="@string/select_area"
                android:textColor="@color/semi_black"
                android:fontFamily="@font/open_sans"
                android:textSize="@dimen/sp18">

            </TextView>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/area"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp20"
                android:layout_marginEnd="@dimen/dp20"
                app:cursorErrorColor="@color/red"
                app:cursorColor="@color/semi_black"
                app:hintTextColor="@color/semi_black"
                app:boxStrokeColor="@color/semi_black"
                app:endIconTint="@color/semi_black"
                >

                <AutoCompleteTextView
                    android:id="@+id/etArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dp10"
                    android:hint="@string/select"
                    android:fontFamily="@font/open_sans"
                    android:inputType="none" />


            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp20"
                android:layout_marginTop="@dimen/dp10"
                android:text="@string/address"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/semi_black"
                android:textSize="@dimen/sp18">

            </TextView>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/address"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp20"
                android:layout_marginEnd="@dimen/dp20"
                app:cursorErrorColor="@color/red"
                app:cursorColor="@color/semi_black"
                app:hintTextColor="@color/semi_black"
                app:boxStrokeColor="@color/semi_black"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etAddress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/dp10"
                    android:text="@string/demo_address"
                    android:hint="@string/please_enter_your_address"
                    android:fontFamily="@font/open_sans"
                    android:inputType="textMultiLine"
                    android:maxLength="200" />


            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp20"
                android:layout_marginTop="@dimen/dp10"
                android:text="@string/service_details"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/semi_black"
                android:textSize="@dimen/sp18">

            </TextView>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/details"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp20"
                android:layout_marginEnd="@dimen/dp20"
                app:cursorErrorColor="@color/red"
                app:cursorColor="@color/semi_black"
                app:hintTextColor="@color/semi_black"
                app:boxStrokeColor="@color/semi_black"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etServiceDetails"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/dp10"
                    android:fontFamily="@font/open_sans"
                    android:hint="@string/please_enter_service_details"
                    android:inputType="textMultiLine"
                    android:maxLength="200" />


            </com.google.android.material.textfield.TextInputLayout>


            <ProgressBar
                android:id="@+id/progressbar_form"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp10"
                android:progressTint="@color/white"
                android:secondaryProgressTint="#E4EDE4"
                android:visibility="gone" />


            <TextView
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp24"
                android:layout_marginTop="@dimen/dp24"
                android:layout_marginEnd="@dimen/dp24"
                android:layout_marginBottom="@dimen/dp20"
                android:background="@drawable/rounded_bg_20_dp"
                android:backgroundTint="@color/semi_black"
                android:gravity="center"
                android:text="@string/submit"
                android:textColor="@color/white"
                android:fontFamily="@font/open_sans"
                android:textSize="@dimen/_18sp" />


        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>