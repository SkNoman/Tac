<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ui.user.ProfileFragment">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200dp"
        android:background="@drawable/bottom_round_profile"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/app_name" />

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/baseline_arrow_back_ios_new_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/app_name"
        app:tint="@color/semi_black" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="@dimen/dp120"
        android:layout_height="@dimen/dp120"
        android:src="@drawable/profile_icon"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        tools:layout_editor_absoluteX="2dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:fontFamily="@font/open_sans"
                android:text="Mohammad"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/semi_black"
                android:textSize="@dimen/sp22">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginStart="@dimen/dp16"
                android:fontFamily="@font/open_sans"
                android:text="@string/phone_number"
                android:textStyle="bold"
                android:textColor="@color/semi_black"
                android:textSize="@dimen/sp18">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginStart="@dimen/dp16"
                android:fontFamily="@font/open_sans_light"
                android:text="@string/demo_phone"
                android:textColor="@color/semi_black"
                android:textSize="@dimen/sp18">

            </TextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginStart="@dimen/dp16"
                android:fontFamily="@font/open_sans"
                android:layout_marginRight="@dimen/_20dp"
                android:text="@string/alternative_phone_no"
                android:textStyle="bold"
                android:textColor="@color/semi_black"
                android:textSize="@dimen/sp18">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginStart="@dimen/dp16"
                android:fontFamily="@font/open_sans_light"
                android:text="@string/demo_phone"
                android:textColor="@color/semi_black"
                android:textSize="@dimen/sp18">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginStart="@dimen/dp16"
                android:fontFamily="@font/open_sans"
                android:text="@string/address"
                android:textStyle="bold"
                android:textColor="@color/semi_black"
                android:textSize="@dimen/sp18">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginStart="@dimen/dp16"
                android:fontFamily="@font/open_sans_light"
                android:layout_marginRight="@dimen/_20dp"
                android:text="@string/demo_address"
                android:textColor="@color/semi_black"
                android:textSize="@dimen/sp18">

            </TextView>


            <ProgressBar
                android:id="@+id/progressbar_form"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp10"
                android:progressTint="@color/white"
                android:secondaryProgressTint="#E4EDE4"
                android:visibility="gone" />


            <TextView
                android:id="@+id/btnLogout"
                android:layout_width="@dimen/_200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp24"
                android:layout_marginTop="@dimen/dp24"
                android:layout_marginEnd="@dimen/dp24"
                android:layout_marginBottom="@dimen/dp20"
                android:background="@drawable/rounded_bg_20_dp"
                android:backgroundTint="@color/appThemeBlue"
                android:fontFamily="@font/open_sans"
                android:gravity="center"
                android:text="Logout"
                android:textColor="@color/white"
                android:textSize="@dimen/_18sp" />


        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>

    <ImageView
        android:id="@+id/ivEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/edit_24_px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/semi_black" />


</androidx.constraintlayout.widget.ConstraintLayout>